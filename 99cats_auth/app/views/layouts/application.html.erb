<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <h2><%= current_user.username if current_user %></h2>
      <% if current_user %>
        <%= render "layouts/logout_btn" %>
      <% else %>
        <%= render "layouts/login_btn" %>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
